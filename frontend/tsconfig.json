{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".", // Add this to resolve paths correctly
    "paths": {
      "@/*": ["src/*"], // This resolves @ to src/ (used in your imports)
    }
  },
  "include": ["src", "src/components", "src/App.tsx", "src/index.tsx"],
  "exclude": ["node_modules"]
}
